<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="parentPane" prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/16"
            fx:controller="at.researchstudio.sat.mmsdesktop.controller.ProjectsController">
    <BorderPane.margin>
        <Insets bottom="10.0" left="25.0" right="25.0" top="10.0"/>
    </BorderPane.margin>
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <Label layoutX="14.0" layoutY="14.0" style="-fx-font-weight: bold;"
                   text="%label.projects.my">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <HBox spacing="10" fx:id="topLoadProjects">
                <JFXButton alignment="CENTER" focusTraversable="false" graphicTextGap="15.0"
                           onAction="#handleLoadProjectsAction" prefHeight="32.0" prefWidth="220.0"
                           ripplerFill="WHITE"
                           style="-fx-background-color: #5bbad5; -fx-cursor: hand;"
                           text="%label.projects.load"
                           textFill="#c1fff9"
                           HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontIcon style="-fx-icon-color: #c1fff9;" iconLiteral="bi-file-earmark"
                                  iconSize="24"/>
                    </graphic>
                    <padding>
                        <Insets bottom="5.0" left="5.0" top="5.0" right="5.0"/>
                    </padding>
                </JFXButton>
            </HBox>
        </VBox>
    </top>
    <center>
        <AnchorPane>
            <TableView fx:id="centerLoadedProjects" AnchorPane.topAnchor="0.0"
                       AnchorPane.rightAnchor="0.0"
                       AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" items="${controller.loadedProjects}">
                <columns>
                    <TableColumn editable="false" prefWidth="200.0"
                                 sortType="DESCENDING" text="%label.projects.name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>

                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100.0"
                                 style="-fx-alignment: CENTER-RIGHT;"
                                 sortType="DESCENDING" text="%label.projects.users">
                        <cellValueFactory>
                            <PropertyValueFactory property="usersSize"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100.0"
                                 style="-fx-alignment: CENTER-RIGHT;"
                                 sortType="DESCENDING" text="%label.projects.standards">
                        <cellValueFactory>
                            <PropertyValueFactory property="standardsSize"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100.0"
                                 style="-fx-alignment: CENTER-RIGHT;"
                                 sortType="DESCENDING" text="%label.projects.mappings">
                        <cellValueFactory>
                            <PropertyValueFactory property="mappingsSize"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </AnchorPane>
    </center>
</BorderPane>
