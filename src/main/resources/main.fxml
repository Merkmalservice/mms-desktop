<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.researchstudio.sat.mmsdesktop.controller.MainController">
        <stylesheets>
            <URL value="@main.css"/>
        </stylesheets>
            <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
                <Menu text="App">
                    <MenuItem text="%label.settings" onAction="#handleSettingsAction" />
                    <SeparatorMenuItem/>
                    <MenuItem text="%label.exit" onAction="#handleExitAction"/>
                </Menu>
                <Menu text="Info">
                    <MenuItem onAction="#handleAboutAction" text="%label.about"/>
                </Menu>
            </MenuBar>
            <BorderPane fx:id="mainPane" VBox.vgrow="ALWAYS">
                <center>
                    <fx:include source="about.fxml"/>
                </center>
                <left>
                    <ToolBar orientation="VERTICAL" BorderPane.alignment="CENTER"
                             style="-fx-background-color: #455A6F;">
                        <items>
                            <JFXButton fx:id="sbExtract" alignment="BASELINE_LEFT" focusTraversable="false" graphicTextGap="15.0"
                                       onAction="#handleExtractAction"
                                       prefHeight="32.0" prefWidth="220.0" ripplerFill="WHITE"
                                       text="%label.sidebar.extractfromifc" textFill="#c1fff9" style="-fx-cursor: hand;">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" top="5.0" right="5.0"/>
                                </padding>
                                <font>
                                    <Font size="16.0"/>
                                </font>
                            </JFXButton>
                            <JFXButton fx:id="sbConvert" disable="true" alignment="BASELINE_LEFT" focusTraversable="false"
                                       onAction="#handleConvertAction"
                                       graphicTextGap="15.0" layoutX="10.0" layoutY="10.0" prefHeight="32.0"
                                       prefWidth="220.0" ripplerFill="WHITE" text="%label.sidebar.convertifc"
                                       style="-fx-cursor: hand;"
                                       textFill="#c1fff9">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" top="5.0" right="5.0"/>
                                </padding>
                                <font>
                                    <Font size="16.0"/>
                                </font>
                            </JFXButton>
                        </items>
                    </ToolBar>
                </left>
            </BorderPane>
</VBox>
