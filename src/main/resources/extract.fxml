<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.researchstudio.sat.mmsdesktop.controller.ExtractController">

    <Label layoutX="14.0" layoutY="14.0" style="-fx-font-weight: bold;" text="%label.extract">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <JFXButton fx:id="pickFile" alignment="BASELINE_LEFT" focusTraversable="false" graphicTextGap="15.0" layoutX="37.0"
               layoutY="53.0" onAction="#handlePickFileAction" prefHeight="32.0" prefWidth="220.0" ripplerFill="WHITE"
               style="-fx-background-color: #5bbad5;" text="%label.select.file" textFill="#c1fff9">
        <padding>
            <Insets bottom="5.0" left="30.0" top="5.0"/>
        </padding>
    </JFXButton>
    <JFXButton fx:id="pickDirectory" alignment="BASELINE_LEFT" focusTraversable="false" graphicTextGap="15.0"
               layoutX="332.0" layoutY="53.0" onAction="#handlePickDirectoryAction" prefHeight="32.0" prefWidth="220.0"
               ripplerFill="WHITE" style="-fx-background-color: #5bbad5;" text="%label.select.directory"
               textFill="#c1fff9">
        <padding>
            <Insets bottom="5.0" left="30.0" top="5.0"/>
        </padding>
    </JFXButton>
    <TableView fx:id="ifcFileTable" layoutX="80.0" layoutY="132.0" prefHeight="577.0"
               prefWidth="1040.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
               AnchorPane.topAnchor="152.0">
        <columns>
            <TableColumn editable="false" prefWidth="100.0"
                         sortType="DESCENDING" text="%label.file.name">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="200.0"
                         sortType="DESCENDING" text="%label.file.fullpath">
                <cellValueFactory>
                    <PropertyValueFactory property="path" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="50.0"
                         sortType="DESCENDING" text="%label.action">
            </TableColumn>
        </columns>
    </TableView>
    <JFXButton fx:id="clearList" alignment="BASELINE_LEFT" focusTraversable="false" graphicTextGap="15.0"
               layoutX="332.0" layoutY="853.0" onAction="#handleClearListAction" prefHeight="32.0" prefWidth="220.0"
               ripplerFill="WHITE" style="-fx-background-color: #5bbad5;" text="%label.table.clear"
               textFill="#c1fff9">
        <padding>
            <Insets bottom="5.0" left="30.0" top="5.0"/>
        </padding>
    </JFXButton>
</AnchorPane>
